@model IEnumerable<jQueryDemonstration.Models.Employee>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<h2>Empleados</h2>


    <table class="table table-striped table-condensed" id="employeeTable">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Posicion
                </th>
                <th>
                    Oficina
                </th>
                <th>
                    Salario
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Employee",new {id=@item.EmployeeID })')"><i class="fa fa-pencil fa-lg"></i>Editar</a>
                        <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Employee",new {id=@item.EmployeeID })')"><i class="fa fa-trash fa-lg"></i>Borrar</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

